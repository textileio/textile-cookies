{
  "name": "{{cookiecutter.appname}}",
  "version": "{{cookiecutter.version}}",
  "description": "{{cookiecutter.description}}",
  "homepage": "./",
  "main": "public/electron.js",
  "author": "{{cookiecutter.author}}",
  "license": "{{cookiecutter.license}}",
  "dependencies": {
    "@craco/craco": "^3.5.0",
    "@textileio/js-http-client": "^0.1.8",
    "electron-is-dev": "^1.0.1",
    "mobx": "^5.9.0",
    "mobx-react": "^5.4.3",
    "moment": "^2.24.0",
    "react": "^16.8.3",
    "react-dom": "^16.8.3",
    "react-moment": "^0.8.4",
    "react-scripts": "2.1.5",
    "react-semantic-toasts": "^0.5.0",
    "semantic-ui-css": "^2.4.1",
    "semantic-ui-react": "^0.85.0",
    "typescript": "^3.3.3333"
  },
  "scripts": {
    "start": "craco start",
    "dev": "concurrently \"cross-env BROWSER=none yarn craco start\" \"wait-on http://localhost:3000 && electron .\"",
    "pack": "electron-builder --dir",
    "predist": "yarn build",
    "dist": "build --x64 --macos --win --linux --c.extraMetadata.main=public/electron.js",
    "build": "craco build",
    "test": "craco test",
    "eject": "react-scripts eject"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "standard": {
    "parser": "babel-eslint"
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ],
  "devDependencies": {
    "@babel/core": "^7.3.4",
    "babel-preset-mobx": "^2.0.0",
    "concurrently": "^4.1.0",
    "cross-env": "^5.2.0",
    "electron": "^4.0.7",
    "electron-builder": "^20.38.5",
    "electron-devtools-installer": "^2.2.4",
    "wait-on": "^3.2.0"
  },
  "build": {
    "appId": "{{cookiecutter.appid}}",
    "compression": "normal",
    "productName": "{{cookiecutter.appname}}",
    "files": [
      "build/**/*",
      "node_modules/**/*",
      "public/electron.js",
      "public/assets/icon.*"
    ],
    "directories": {
      "buildResources": "public",
      "output": "dist"
    },
    "mac": {
      "category": "public.app-category.utilities",
      "icon": "assets/icon.icns",
      "type": "distribution",
      "target": [
        "pkg",
        "dmg"
      ]
    },
    "win": {
      "icon": "assets/icon.ico",
      "target": "nsis"
    },
    "linux": {
      "category": "Network",
      "icon": "assets/icon.png",
      "target": [
        "snap",
        "AppImage"
      ]
    }
  }
}
